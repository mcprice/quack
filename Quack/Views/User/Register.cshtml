
@{
    ViewBag.Title = "Register";
}

<div class="container body-content">
    <h2>Register as a Quack Contributor</h2>
    <p>Create your free Quack account and log your latest duck feeding today.</p>
    <form id="registration-form">
        <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email" required>
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="first-name">First Name (optional)</label>
            <input type="text" class="form-control" id="first-name" aria-describedby="textHelp" placeholder="Enter your first name">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" placeholder="Password" required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form><br />
    <p>Already registered? <a href="/User/Login">Login</a> to your Quack account.</p>
</div>

@section ViewsJS
{
    <script type="text/javascript" src="@Url.Content("/Scripts/js/register.js")"></script>
}